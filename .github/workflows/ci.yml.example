# Example CI Workflow
# Rename to ci.yml and customize for your project

name: CI

on:
  push:
    branches: [main, dev]
  pull_request:
    branches: [main]

# Minimal permissions (expand as needed)
permissions:
  contents: read
  pull-requests: read

jobs:
  lint:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

