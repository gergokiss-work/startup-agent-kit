{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Blow.aiff"
          },
          {
            "type": "command",
            "command": ".claude/scripts/tts-reader.sh"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(npm run:*)",
      "Bash(yarn:*)",
      "Bash(pnpm:*)",
      "Bash(bun:*)",
      "Bash(make:*)",
      "Bash(go test:*)",
      "Bash(go build:*)",
      "Bash(pytest:*)",
      "Bash(cargo test:*)",
      "Bash(cargo build:*)",
      "Bash(mvn:*)",
      "Bash(gradle:*)",
      "Bash(docker build:*)",
      "Bash(docker compose:*)",
      "Bash(terraform plan:*)",
      "Bash(terraform validate:*)",
      "Bash(helm lint:*)",
      "Bash(kubectl get:*)",
      "Bash(kubectl describe:*)",
      "Bash(.claude/scripts/*)"
    ],
    "deny": [
      "Bash(rm -rf /)",
      "Bash(sudo:*)",
      "Bash(chmod 777:*)",
      "Bash(terraform apply:*)",
      "Bash(terraform destroy:*)",
      "Bash(kubectl delete:*)"
    ]
  }
}
